<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3>Community Requests</h3>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive table-bordered">
            <table class="table">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Estimated hours</th>
                  <th>Location</th>
                  <th>Timing</th>
                  <th>Requested by</th>
                </tr>
              </thead>
              <tbody>
                <% @service_requests.each do |service_request| %>
                  <tr id='srs'>
                    <td><%= link_to service_request.title, service_request %></td>
                    <td><%= service_request.description %></td>
                    <td><%= service_request.estimated_hours %></td>
                    <td><%= service_request.location %></td>
                    <td><%= service_request.timing %></td>       
                    <td><%= service_request.recipient.first_name %></td>
                    <td><button class="btn btn-success btn-md"><%= link_to 'More info', service_request %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
  </div>
</div>

               
<br>
<!-- Added form to index page to render new service request on same page after creation: -->
<div class="container">
  <div class="col-md-6 col-md-offset-3 " style="padding-bottom:30px">
    <div class="panel panel-success" style="margin-top:10px" id="startrequest">
      <div class="panel-heading" style="text-align:center">
        <h2>Request a service</h2>
      </div>
      <div class="panel-body" style="text-align:center">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
</div>

  
 

